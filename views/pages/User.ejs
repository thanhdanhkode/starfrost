<title>Users â€¢ Starfrost</title>

<div class="container">
  <div class="user">
    <div class="header">
			<span>Users</span>
			<div class="func">
				<button type="button">
					<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-plus-icon lucide-plus"><path d="M5 12h14"/><path d="M12 5v14"/></svg>
					<span>Add user</span>
				</button>
			</div>
		</div>
    <div class="user-wrapper">
      <ul class="list">
        <% userData.forEach(function(user) { %>
          <li>
						<a href="/app/users/<%= user.id %>">
							<div class="user-info">
								<span>
									<%= user.name %>
								</span>
								<span>
									<%= user.description %>
								</span>
							</div>
							<div class="user-stats">
								<div class="stat">
									<svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-shield-user-icon lucide-shield-user"><path d="M20 13c0 5-3.5 7.5-7.66 8.95a1 1 0 0 1-.67-.01C7.5 20.5 4 18 4 13V6a1 1 0 0 1 1-1c2 0 4.5-1.2 6.24-2.72a1.17 1.17 0 0 1 1.52 0C14.51 3.81 17 5 19 5a1 1 0 0 1 1 1z"/><path d="M6.376 18.91a6 6 0 0 1 11.249.003"/><circle cx="12" cy="11" r="4"/></svg>
									<span>
										<%= user.role %>
									</span>
								</div>
							</div>
						</a>
					</li>
				<% }) %>
			</ul>
		</div>
  </div>
</div>

<style>
  .container {
    width: 100%;
    height: 100%;
  }
  .user {
		width: calc((3 / 4) * 100%);
    margin: auto;
		margin-top: 32px;
  }
  .user > .header {
    width: 100%;
		display: flex;
		justify-content: space-between;
		align-items: center;
  }
  .user > .header > span {
    width: 100%;
    font-size: 1.75rem;
    font-weight: 600;
  }
	.user > .header > .func > button {
		display: flex;
		align-items: center;
		justify-content: center;
		padding: 8px;
		border-radius: 8px;
		cursor: pointer;
		transition-property: all;
		transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
		transition-duration: 0.15s;
		background: #f5f5f5;
	}
	.user > .header > .func > button:hover {
		background: blueviolet;
		color: white;
	}
	.user > .header > .func > button > svg {
		width: 16px;
		height: 16px;
	}
	.user > .header > .func > button > span {
		margin: 0 4px;
		text-wrap: nowrap;
	}
	.user > .user-wrapper > .list {
		display: grid;
		grid-template-columns: 1;
		grid-template-rows: auto;
		gap: 8px;
		margin-top: 16px;
	}
	.user > .user-wrapper > .list > li {
		display: contents;
	}
	.user > .user-wrapper > .list > li > a {
		width: 100%;
		height: 72px;
		padding: 12px;
		background: #f5f5f5;
		transition-property: all;
    transition-timing-function: cubic-bezier(0.4, 0, 0.2, 1);
		transition-duration: 0.15s;
		border-radius: 8px;
		display: flex;
		align-items: center;
		justify-content: space-between;
	}
	.user > .user-wrapper > .list > li > a:hover {
		background: blueviolet;
		color: white;
	}
	.user > .user-wrapper > .list > li > a > .user-info {
		display: flex;
		flex-direction: column;
	}
	.user > .user-wrapper > .list > li > a > .user-info > span:nth-child(1) {
		font-weight: 500;
		font-size: 1rem;
	}
	.user > .user-wrapper > .list > li > a > .user-info > span:nth-child(2) {
		color: #737373;
		font-size: 0.75rem;
	}
	.user > .user-wrapper > .list > li > a:hover > .user-info > span:nth-child(2) {
		color: #f3f3f3;
	}
	.user > .user-wrapper > .list > li > a > .user-stats {
		display: flex;
		align-items: center;
	}
	.user > .user-wrapper > .list > li > a > .user-stats > .stat {
		display: flex;
		justify-content: center;
		align-items: center;
		padding: 8px;
		background: #d4d4d4;
		border-radius: 6px;
		margin: 0 4px;
	}

	.user > .user-wrapper > .list > li > a:hover > .user-stats > .stat {
		background: #fff;
		color: #000;
	}

	.user > .user-wrapper > .list > li > a > .user-stats > .stat > svg {
		width: 16px;
		height: 16px;
	}

	.user > .user-wrapper > .list > li > a > .user-stats > .stat > span {
		font-size: 0.875rem;
		margin: 0 8px;
		text-transform: capitalize;
	}
</style>

